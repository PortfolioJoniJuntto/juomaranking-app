{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@Screens/*": ["./src/Screens/*"],
      "@Components/*": ["./src/Components/*"],
      "@Context": ["./context"],
      "@Constants": ["./src/constants"],
      "@Helpers": ["./src/helpers"]
    }
  },
  "typeRoots": ["./src/types"]
}
